<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simplecamera.ManualActivity"
    android:background="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/Leftbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="169dp"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/Rightbutton"
        android:layout_alignBottom="@+id/Leftbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/buttonClose"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Rightbutton"
        android:layout_alignEnd="@+id/Rightbutton"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/buttonConnect"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/buttonARU"
        android:layout_above="@+id/buttonConnect"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="35dp"
        android:onClick="onClick" />

    <VideoView
        android:layout_width="500dip"
        android:layout_height="50dip"
        android:id="@+id/videoView1"
        android:layout_marginTop="3dip"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.example.simplecamera.MjpegView
        android:id="@+id/mVideo"
        android:layout_width="500dip"
        android:layout_height="50dip"
        android:layout_marginTop="3dip"
        android:layout_alignBottom="@+id/videoView1"
        android:layout_alignParentTop="true" />

    <SeekBar
        android:layout_width="500dip"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarAcc"
        android:layout_below="@+id/Rightbutton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top"
        android:id="@+id/Topbutton"
        android:layout_above="@+id/seekBarAcc"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/Backbutton"
        android:layout_alignBottom="@+id/buttonARU"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

</RelativeLayout>
